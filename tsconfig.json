{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "@types/*"
      ]
    },
    "types": [
      "@typescript-to-lua/language-extensions"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "strict": true
  },
  "tstl": {
    "luaTarget": "universal",
    "luaLibImport": "inline",
    "noImplicitSelf": true,
    "luaPlugins": [
      {
        "name": "./transpilers/imports.ts"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*"
  ]
}